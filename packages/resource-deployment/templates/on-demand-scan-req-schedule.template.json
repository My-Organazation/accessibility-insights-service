{
    "id": "on-demand-scan-req-schedule",
    "schedule": {
        "recurrenceInterval": "PT2M"
    },
    "jobSpecification": {
        "priority": 1000,
        "constraints": {
            "maxWallClockTime": "PT1H",
            "maxTaskRetryCount": 0
        },
        "jobManagerTask": {
            "id": "on-demand-scan-req-sender-task",
            "commandLine": "",
            "containerSettings": {
                "containerRunOptions": "-e APPINSIGHTS_INSTRUMENTATIONKEY -e KEY_VAULT_URL -e AZURE_STORAGE_SCAN_QUEUE",
                "imageName": "%CONTAINER_REGISTRY_TOKEN%.azurecr.io/batch-scan-request-sender"
            },
            "resourceFiles": [
                {
                    "autoStorageContainerName": "batch-on-demand-scan-request-sender-script"
                },
                {
                    "autoStorageContainerName": "runtime-configuration"
                }
            ],
            "constraints": {
                "maxWallClockTime": "PT1H",
                "retentionTime": "P3D",
                "maxTaskRetryCount": 0
            },
            "killJobOnCompletion": true,
            "userIdentity": {
                "autoUser": {
                    "scope": "task",
                    "elevationLevel": "nonadmin"
                }
            },
            "runExclusive": false
        },
        "commonEnvironmentSettings": [
            {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "%APP_INSIGHTS_TOKEN%"
            },
            {
                "name": "AZURE_STORAGE_SCAN_QUEUE",
                "value": "ondemand-scanrequest"
            },
            {
                "name": "KEY_VAULT_URL",
                "value": "%KEY_VAULT_TOKEN%"
            }
        ],
        "poolInfo": {
            "poolId": "on-demand-scan-request-pool"
        }
    }
}
